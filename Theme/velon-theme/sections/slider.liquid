  /* slider img css */
  .slider-content {
    position: relative;
    z-index: 0;
    overflow: hidden;
  }
  .slider-content .slider-main .home-slider .slide-image svg {
    width: 100%;
  }
  .slider-content .slider-main .home-slider .slide-image .mobile-img {
    display: none;
  }
  @media (max-width: 991px) {
    .slider-content .slider-main .home-slider .slide-image .mobile-img {
      display: block;
    }
    .slider-content .slider-main .home-slider .slide-image .desk-img {
      display: none;
    }
  }

  /* slider text-info css */
  .slider-content .slider-main .home-slider .slide-image {
    display: flex;
    align-items: center;
  }
  .slider-content .slider-main .home-slider .slide-image .slider-info-content {
    position: absolute;
    left: 0px;
    right: 0px;
    z-index: 1;
  }
  @media (max-width: 600px) {
    {% if section.settings.slider_content_enable %}
    .slider-content .slider-main .home-slider .slide-image .slider-info-content {
      display: none;
    }
    {% endif %}
  }

  /* slider content position */
  .slider-content .slider-main .home-slider .slide-image .slider-info-content .slider-text-info.slider-content-left {
    margin-right: auto;
  }
  .slider-content .slider-main .home-slider .slide-image .slider-info-content .slider-text-info.slider-content-right {
    margin-left: auto;
  }
  .slider-content .slider-main .home-slider .slide-image .slider-info-content .slider-text-info.slider-content-center {
    margin: 0 auto;
  }
