<section class="slider-content">
  <div class="slider-main">
    <div class="home-slider swiper" id="home-slider-{{ section.id }}">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="slide-image">
            {%- if block.settings.slider_img -%}
            {{ block.settings.slider_img | image_url: width: 1920 | image_tag:
            loading: 'lazy',
            width: block.settings.slider_img.width,
            height: block.settings.slider_img.height,
            class: "img-fluid desk-img",
            alt: block.settings.slider_img.alt | escape }}
            {%- else -%}  
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg desk-img' }}
            {%- endif -%}

            {%- if block.settings.mobile_slider_img -%}
            {{ block.settings.mobile_slider_img | image_url: width: 1920 | image_tag:
            loading: 'lazy',
            width: block.settings.mobile_slider_img.width,
            height: block.settings.mobile_slider_img.height,
            class: "img-fluid mobile-img",
            alt: block.settings.mobile_slider_img.alt | escape }}
            {%- else -%}  
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg mobile-img' }}
            {%- endif -%}

            <div class="container slider-info-content">
              <div class="row">
                <div class="col">
                  <div class="slider-text-info item-{{ block.id }} {% if block.settings.slider_content_position == "right" %} slider-content-right{% elsif block.settings.slider_content_position == "left" %} slider-content-left{% else %} slider-content-center{% endif %}{% if block.settings.slider_text_position == "right" %} slider-text-right{% elsif block.settings.slider_text_position == "left" %} slider-text-left{% else %} slider-text-center{% endif %}">
                    {% if block.settings.slider_subtitle_label != '' or block.settings.slider_subtitle_price != '' %}
                    <span class="subtitle {% if block.settings.slider_subtitle_effect == "e2" %}e2{% elsif block.settings.slider_subtitle_effect == "e3" %}e3{% elsif block.settings.slider_subtitle_effect == "e4" %}e4{% elsif block.settings.slider_subtitle_effect == "e5" %}e5{% else %}e1{% endif %}">
                      <span class="label">{{ block.settings.slider_subtitle_label }}</span>
                      <span class="text">{{ block.settings.slider_subtitle_price }}</span>
                    </span>
                    {% endif %}

                    {% if block.settings.slider_title != '' %}
                    <h2 class="{% if block.settings.slider_title_effect == "e2" %}e2{% elsif block.settings.slider_title_effect == "e3" %}e3{% elsif block.settings.slider_title_effect == "e4" %}e4{% elsif block.settings.slider_title_effect == "e5" %}e5{% else %}e1{% endif %}">{{ block.settings.slider_title }}</h2>
                    {% endif %}

                    <div class="button-price {% if block.settings.slider_btn_bio_effect == "e2" %}e2{% elsif block.settings.slider_btn_bio_effect == "e3" %}e3{% elsif block.settings.slider_btn_bio_effect == "e4" %}e4{% elsif block.settings.slider_btn_bio_effect == "e5" %}e5{% else %}e1{% endif %}">
                      {% if block.settings.slider_button != '' %}
                      <a href="{{ block.settings.slider_button_url }}" class="slider-btn btn {% if block.settings.slider_button_style == 'btn-style1' %}btn-style{% elsif block.settings.slider_button_style == 'btn-style2' %}btn-style2{% else %}btn-style3{% endif %}">{{ block.settings.slider_button }}</a>
                      {% endif %}
                      <h4 class="custom-title">
                        {% if block.settings.slider_price_label != '' %}
                        <span class="text1">{{ block.settings.slider_price_label }}</span>
                        {% endif %}
                        {% if block.settings.slider_price_text != '' %}
                        <span class="text2">{{ block.settings.slider_price_text }}</span>
                        {% endif %}
                      </h4>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {% style %}
            .slider-content .slider-main .home-slider .slide-image .slider-info-content .slider-text-info.item-{{ block.id }} span.subtitle span.label {
              color: {{ block.settings.slider_subtitle_color }};
            }
            .slider-content .slider-main .home-slider .slide-image .slider-info-content .slider-text-info.item-{{ block.id }} h2 {
              color:{{ block.settings.slider_title_color }};
            }
            .slider-content .slider-main .home-slider .slide-image .slider-info-content .slider-text-info.item-{{ block.id }} .button-price h4.custom-title span.text2 {
              color:{{ block.settings.slider_price_text_color }};
            }
            @media (max-width: 600px) {
              .slider-content .slider-main .home-slider .slide-image .slider-info-content .slider-text-info.item-{{ block.id }} span.subtitle,
              .slider-content .slider-main .home-slider .slide-image .slider-info-content .slider-text-info.item-{{ block.id }} h2,
              .slider-content .slider-main .home-slider .slide-image .slider-info-content .slider-text-info.item-{{ block.id }} .button-price h4.custom-title span.text1,
              .slider-content .slider-main .home-slider .slide-image .slider-info-content .slider-text-info.item-{{ block.id }} .button-price h4.custom-title span.text2 {
                color: var(--font-color-body);
              }  
            }
            {% endstyle %}
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
  addEventListener('DOMContentLoaded', (event) => {
    var swiper = new Swiper('.swiper#home-slider-{{ section.id }}', {
      slidesPerView: 1,
      spaceBetween: 0,
      observer: true,
      observeParents: true,
      watchSlidesProgress: true,
      loop: true,
      {%- if settings.enable_rtl -%}
      rtl: true,
      {%- endif -%}
      grid: {
        rows: 1,
        fill: 'row' | 'column',
      },
      navigation: {
        nextEl: '.swiper-next-{{ section.id }}',
        prevEl: '.swiper-prev-{{ section.id }}',
      },
      // autoplay: {
      //   delay: 5000,
      //   disableOnInteraction: false,
      //   pauseOnMouseEnter: true
      // }
    });
  });
</script>
