  .slider-category {
    padding-top:{{ section.settings.section_padding_top_lg }}px;
    padding-bottom:{{ section.settings.section_padding_bottom_lg }}px;
  }
}
@media (max-width: 767px) {
  .slider-category {
    padding-top:{{ section.settings.section_padding_top_xs }}px;
    padding-bottom:{{ section.settings.section_padding_bottom_xs }}px;
  }
}

/* category title and swiper button css */
.slider-category .section-capture {
  display: flex;  
  align-items: center;
  justify-content: space-between;
}
.slider-category .section-capture .swiper-buttons {
  margin-top: 0px;
}
@media (max-width: 479px) {
  .slider-category .section-capture {
    flex-direction: column;
  }
  .slider-category .section-capture .swiper-buttons {
    display: none;
  }
}

/* category item css */
.slider-category .category-wrap {
  position: relative; 
  text-align: center;
}
.slider-category .category-wrap a.category-block {
  position: relative;
  background-color: var(--extra-color-body);
  padding: 30px;
  display: block;
}
.slider-category .category-wrap a.category-block::before {
  background: var(--theme-gradient-color);
  content: '';
  position: absolute;
  top: 0px;
  right: 0px;
  bottom: 0px;
  left: 0px;
  opacity: 0;
  visibility: hidden;
  -webkit-transition: opacity .3s ease-in-out, visibility .3s ease-in-out;
  -o-transition: opacity .3s ease-in-out, visibility .3s ease-in-out;
  transition: opacity .3s ease-in-out, visibility .3s ease-in-out;
}
.slider-category .category-wrap:hover a.category-block::before {
  opacity: 0.5;
  visibility: visible;
}
.slider-category .category-wrap a.category-block .category-main span.image svg {
  width: 100%;
}
.slider-category .category-wrap a.category-block .category-main .category-content {
  margin-top: 24px;
}
.slider-category .category-wrap a.category-block .category-main .category-content h4.title {
  font-size: var(--font-size-subtitle-body);
  font-weight: var(--font-subtitle-weight-body);
}
.slider-category .category-wrap a.category-block .category-main .category-content span.item-btn {
  color: var(--font-color-paragraph);
  margin-top: 7px;
}
.slider-category .category-wrap .category-button {
  position: absolute;
  bottom: 50%;
  transform: translateY(50%);
  left: 30px;
  right: 30px;
  opacity: 0;
  visibility: hidden;
  -webkit-transition: opacity .3s ease-in-out, visibility .3s ease-in-out;
  -o-transition: opacity .3s ease-in-out, visibility .3s ease-in-out;
  transition: opacity .3s ease-in-out, visibility .3s ease-in-out;
}
.slider-category .category-wrap:hover .category-button {
  opacity: 1;
  visibility: visible;
}
@media (max-width: 767px) {
  .slider-category .category-wrap a.category-block {
    padding: 30px 12px;
  }
  .slider-category .category-wrap .category-button {
    left: 12px;
    right: 12px;
  }
}

/* mobile slider button css */
.slider-category .swiper-buttons.mobile {
  display: none;
}
@media (max-width: 479px) {
  .slider-category .swiper-buttons.mobile {
    display: flex;
  }
}
</style>