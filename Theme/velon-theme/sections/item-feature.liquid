      background-color: var(--font-color-primary);
      border-color: var(--font-color-primary);
    }
    .item-feature .item-feature-wrap .feature-ser-main .feature-service ul.feature-ul li.feature-li .feature-main .feature-count span.count::before {
      counter-increment: my-sec-counter;
      content: counters(my-sec-counter, ".", decimal-leading-zero);
      font-size: 18px;
      font-weight: var(--font-subtitle-weight-body);
    }
    .item-feature .item-feature-wrap .feature-ser-main .feature-service ul.feature-ul li.feature-li .feature-main .feature-text {
