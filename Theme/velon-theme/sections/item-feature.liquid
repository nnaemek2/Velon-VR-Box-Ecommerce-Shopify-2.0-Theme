<section class="item-feature" {% if section.settings.section_bg_image_enable %}style="background-image: url('{% if section.settings.section_bg_image %}{{ section.settings.section_bg_image | image_url }}{% else %}https://dummyimage.com/1920x1050/f7f7f7/999999{% endif %}');"{% endif %}>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="item-feature-wrap">
          <div class="feature-image">
            <span class="image">
              {%- if section.settings.about_image -%}
              {{ section.settings.about_image | image_url: width: 1920 | image_tag:
                loading: 'lazy',
                width: section.settings.about_image.width,
                height: section.settings.about_image.height,
                class: "img-fluid",
                alt: section.settings.about_image.alt | escape }}
              {%- else -%}
              {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
              {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </span>
          </div>
          <div class="feature-ser-main">
            <div class="feature-title">
              {% if section.settings.feature_ser_subtitle != '' or section.settings.feature_ser_title != '' or section.settings.feature_ser_desc != '' %}
              <div class="section-capture">
                <div class="section-title">
                  {% if section.settings.feature_ser_subtitle != '' %}
                  <span>
                    <span class="image">
                      {%- if section.settings.subtitle_icon -%}
                      {{ section.settings.subtitle_icon | image_url: width: 512 | image_tag:
                        loading: 'lazy',
                        width: section.settings.subtitle_icon.width,
                        height: section.settings.subtitle_icon.height,
                        class: "img-fluid",
                        alt: section.settings.subtitle_icon.alt | escape }}
                      {%- else -%}
                      {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
                      {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
                      {%- endif -%}
                    </span>
                    {{ section.settings.feature_ser_subtitle }}
                  </span>
                  {% endif %}
                  {% if section.settings.feature_ser_title != '' %}
                  <h2>{{ section.settings.feature_ser_title }}</h2>
                  {% endif %}
                  {% if section.settings.feature_ser_desc != '' %}
                  <p class="desc">{{ section.settings.feature_ser_desc }}</p>
                  {% endif %}
                </div>
              </div>
              {% endif %}
              {% if section.settings.feature_btn_text != '' %}
              <a href="{{ section.settings.feature_btn_url }}" class="feature-btn btn {% if section.settings.feature_btn_style == 'btn-style1' %}btn-style{% elsif section.settings.feature_btn_style == 'btn-style2' %}btn-style2{% else %}btn-style3{% endif %}">{{ section.settings.feature_btn_text }}</a>
              {% endif %}
            </div>
            <div class="feature-service">
              <ul class="feature-ul">
                {% for block in section.blocks %}
                <li class="feature-li">
                  <div class="feature-main">
                    <div class="feature-count">
                      <span class="count"></span>
                    </div>
                    <div class="feature-text">
                      {% if block.settings.feature_title != '' %}
                      <h4 class="title">{{ block.settings.feature_title }}</h4>
                      {% endif %}
                      {% if block.settings.feature_desc != '' %}
                      <p class="desc">{{ block.settings.feature_desc }}</p>
                      {% endif %}
                    </div>
                  </div>
                </li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

