  <style>
    .item-feature {
      padding-top: {{ section.settings.section_padding_top }}px;
      padding-bottom: {{ section.settings.section_padding_bottom }}px;
      {% if section.settings.section_bg_color_enable %}
      background-color: {{ section.settings.section_bg_color }};
      {% endif %}
      {% if section.settings.section_bg_image_enable %}
      background-repeat: no-repeat;
      background-position: center;
      background-size: cover;
      {% endif %}
      {% if section.settings.border_enable %}
      border-top: {{ section.settings.border }}px solid {{ section.settings.border_color | color_modify: 'alpha', section.settings.border_color_opacity }};
      {% endif %}
    }
    @media (max-width: 1199px) {
      .item-feature {
        padding-top: {{ section.settings.section_padding_top_ip }}px;
        padding-bottom: {{ section.settings.section_padding_bottom_ip }}px;
      }
    }
    @media (max-width: 767px) {
      .item-feature {
        padding-top: {{ section.settings.section_padding_top_xs }}px;
        padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
      }
    }

    .item-feature .item-feature-wrap {
      width: 83.33%;
      margin: 0 auto;
    }
    .item-feature .item-feature-wrap .feature-image {
      margin-bottom: 50px;
    }
    .item-feature .item-feature-wrap .feature-image span.image svg {
      width: 100%;
    }
    .item-feature .item-feature-wrap .feature-ser-main {
      display: flex;
      flex-wrap: wrap;
      {% if settings.enable_rtl %}
      margin-right: -30px;
      {% else %}
      margin-left: -30px;
      {% endif %}
    }
    .item-feature .item-feature-wrap .feature-ser-main .feature-title {
      width: calc(41.67% - 30px);
      {% if settings.enable_rtl %}
      margin-right: 30px;
      {% else %}
      margin-left: 30px;
      {% endif %}
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
    }
    .item-feature .item-feature-wrap .feature-ser-main .feature-service {
      width: calc(58.33% - 30px);
      {% if settings.enable_rtl %}
      margin-right: 30px;
      {% else %}
      margin-left: 30px;
      {% endif %}
    }
    @media (max-width: 1499px) {
      .item-feature .item-feature-wrap {
        width: 100%;
      }
    }
    @media (max-width: 1199px) {
      .item-feature .item-feature-wrap .feature-image {
        margin-bottom: 40px;
      }
      .item-feature .item-feature-wrap .feature-ser-main .feature-title {
        width: calc(33.33% - 30px);
      }
      .item-feature .item-feature-wrap .feature-ser-main .feature-service {
        width: calc(66.67% - 30px);
      }
    }
    @media (max-width: 911px) {
      .item-feature .item-feature-wrap .feature-ser-main .feature-title,
      .item-feature .item-feature-wrap .feature-ser-main .feature-service {
        width: calc(100% - 30px);
      }
    } 

