<section class="blog-wrap">
  <div class="container">
    <div class="row">
      <div class="col">
        {% if section.settings.section_title != '' %}
        <div class="section-capture">
          <div class="section-title">
            {% if section.settings.section_title != '' %}
            <h2>{{ section.settings.section_title }}</h2>
            {% endif %}
          </div>
        </div>
        {% endif %}
        {% assign blog_home = blogs[section.settings.blog_home] %}
        <div class="blog-slider swiper" id="blog-{{ section.id }}">
          <div class="swiper-wrapper">
            {% assign blog_home_limit = section.settings.blog_home_limit_handle %}
            {% for article in blog_home.articles limit: blog_home_limit %}
            <div class="swiper-slide">
              {% render 'blog-grid-item', article: article %}
            </div>
            {% else %}
            {% for i in (1..blog_home_limit) %}
            <div class="swiper-slide">
              <div class="blog-post">
                <div class="blog-main-img">
                  <a href="{{ article.url }}" class="blog-img">
                  {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
                  {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
                  </a>
                </div>
                <div class="blog-post-content">
                  <span class="date-time">{{ 'homepage.sections.blog_date' | t }}</span>
                  <h6 class="blog-title">
                    <a href="#">{{ 'homepage.sections.blog_title' | t }}</a>
                  </h6>
                  <p class="blog-desc">{{ 'homepage.sections.blog_description' | t }}</p>
                </div>
              </div>
            </div>
            {% endfor %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
addEventListener('DOMContentLoaded', (event) => {
  var swiper = new Swiper('.swiper#blog-{{ section.id }}', {
    slidesPerView: 4,
    spaceBetween: 30,
    observer: true,
    observeParents: true,
    watchSlidesProgress: true,
    loop: true,
    {%- if settings.enable_rtl -%}
    rtl: true,
    {%- endif -%}
    navigation: {
      nextEl: '.swiper-next-{{ section.id }}',
      prevEl: '.swiper-prev-{{ section.id }}',
    },
    autoplay: {
      delay: 5000,
      disableOnInteraction: false,
      pauseOnMouseEnter: true
    },
    breakpoints: {
      0: {
        slidesPerView: 1,
        spaceBetween: 12
      },
      320: {
        slidesPerView: 1,
        spaceBetween: 12
      },
      360: {
        slidesPerView: 1,
        spaceBetween: 12
      },
      540: {
        slidesPerView: 1,
        spaceBetween: 12
      },
      640: {
        slidesPerView: 2,
        spaceBetween: 12
      },
      768: {
        slidesPerView: 2,
        spaceBetween: 30
      },
      1024: {
        slidesPerView: 2,
        spaceBetween: 30
      },
      1199: {
        slidesPerView: 3,
        spaceBetween: 30
      },
      1399: {
        slidesPerView: 4,
        spaceBetween: 30
      }
    }
  });
});
</script>
