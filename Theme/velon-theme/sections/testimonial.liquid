<style>
.testimonial-area {
  padding-top: {{ section.settings.section_padding_top }}px;
  padding-bottom: {{ section.settings.section_padding_bottom }}px;
  {% if section.settings.border_enable %}
  border-top: {{ section.settings.border }}px solid {{ section.settings.border_color | color_modify: 'alpha', section.settings.border_color_opacity }};
  {% endif %}
  {% if section.settings.section_bg_color_enable %}
  background-color: {{ section.settings.section_bg_color }};
  {% endif %}
}
@media (max-width: 1199px) {
  .testimonial-area {
    padding-top: {{ section.settings.section_padding_top_ip }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_ip }}px;
  }
}
@media (max-width: 767px) {
  .testimonial-area {
    padding-top: {{ section.settings.section_padding_top_xs }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
  }
}

/* testimonial css */
.testimonial-area .testimonial-wrap .testimonial-main {
  display: flex;
  flex-wrap: wrap;
  background-color: var(--background-color-body);
  padding: 30px 30px 23px 30px;
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-img {
  width: 100px;
  text-align: center;
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-img span.image {
  width: 100px;
  display: block;
  overflow: hidden;
  border-radius: 100%;
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-img span.image svg {
  width: 100%;
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-img span.icon {
  font-size: 50px;
  margin-top: 26px;
  line-height: 0;
  background: var(--theme-gradient-color);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-content {
  width: calc(100% - 130px);
  {% if settings.enable_rtl %}
  margin-right: 30px;
  {% else %}
  margin-left: 30px;
  {% endif %}
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-content span.testi-review {
  margin-bottom: 7px;
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-content span.testi-review {
  display: flex;
  line-height: 0;
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-content span.testi-review i {
  color: #FFB703;
  {%- if settings.enable_rtl -%}
  margin-left: 5px;
  {%- else -%}
  margin-right: 5px;
  {%- endif -%}
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-content span.testi-review i:last-child {
  {%- if settings.enable_rtl -%}
  margin-left: 0px;
  {%- else -%}
  margin-right: 0px;
  {%- endif -%}
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-content span.testi-review i::before {
  content: "\f006";
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-content span.testi-review i.fill::before {
  content: "\f005";
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-content .testi-author {
  margin-top: 18px;
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-content .testi-author h6.author-title {
  font-size: var(--font-size-subtitle-body);
  font-weight: var(--font-subtitle-weight-body);
}
.testimonial-area .testimonial-wrap .testimonial-main .testimonial-content .testi-author span.author-bio {
  background: var(--theme-gradient-color);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-top: 7px;
}
@media (max-width: 479px) {
  .testimonial-area .testimonial-wrap .testimonial-main {
    padding: 30px 12px 26px 12px;
    flex-direction: column;
  }
  .testimonial-area .testimonial-wrap .testimonial-main .testimonial-img {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .testimonial-area .testimonial-wrap .testimonial-main .testimonial-img span.icon {
    margin-top: 0px;
  }
  .testimonial-area .testimonial-wrap .testimonial-main .testimonial-content {
    width: calc(100% - 0px);
    margin-top: 30px;
    {% if settings.enable_rtl %}
    margin-right: 0px;
    {% else %}
    margin-left: 0px;
    {% endif %}
  }
}
</style>