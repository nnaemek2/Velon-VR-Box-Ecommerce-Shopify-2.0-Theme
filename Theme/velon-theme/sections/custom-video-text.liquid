<style type="text/css">
	.custom-video-text {
		padding-top: {{ section.settings.custom_video_padding_top }}px;
		padding-bottom: {{ section.settings.custom_video_padding_bottom }}px;
		{% if section.settings.border_enable %}
		border-top: {{ section.settings.border }}px solid {{ section.settings.border_color | color_modify: 'alpha', section.settings.border_color_opacity }};
		{% endif %}
		{% if section.settings.section_bgcolor_enable %}
		background-color: {{ section.settings.section_bgcolor }};
		{% endif %}
    {% if section.settings.section_bg_image_enable %}
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    {% endif %}
	}
	@media (max-width: 1199px) {
		.custom-video-text {
			padding-top: {{ section.settings.custom_video_padding_top_ip }}px;
			padding-bottom: {{ section.settings.custom_video_padding_bottom_ip }}px;
		}
	}
	@media (max-width: 767px) {
		.custom-video-text {
			padding-top: {{ section.settings.custom_video_padding_top_xs }}px;
			padding-bottom: {{ section.settings.custom_video_padding_bottom_xs }}px;
		}
	}

	/* main css	*/
	.custom-video-text .video-text-block {
		display: flex;
		flex-wrap: wrap;
		{%- if settings.enable_rtl -%}
		margin: -50px -30px 0px 0px;
		{%- else -%}
		margin: -50px 0px 0px -30px;
		{%- endif -%}
	}
  .custom-video-text .video-text-block .custom-video {
    width: calc(25% - 30px);
		{%- if settings.enable_rtl -%}
		margin: 50px 30px 0px 0px;
		{%- else -%}
		margin: 50px 0px 0px 30px;
		{%- endif -%}
  }
	.custom-video-text .video-text-block .video-image {
		width: calc(75% - 30px);
		{%- if settings.enable_rtl -%}
		margin: 50px 30px 0px 0px;
		{%- else -%}
		margin: 50px 0px 0px 30px;
		{%- endif -%}
    text-align: center;
	}
	@media (max-width: 1199px) {
    .custom-video-text .video-text-block {
      {%- if settings.enable_rtl -%}
      margin: -40px -30px 0px 0px;
      {%- else -%}
      margin: -40px 0px 0px -30px;
      {%- endif -%}
    }
    .custom-video-text .video-text-block .custom-video,
    .custom-video-text .video-text-block .video-image {
      {%- if settings.enable_rtl -%}
      margin: 40px 30px 0px 0px;
      {%- else -%}
      margin: 40px 0px 0px 30px;
      {%- endif -%}
    }
  }
	@media (max-width: 991px) {
    .custom-video-text .video-text-block .custom-video {
      width: calc(33.33% - 30px);
    }
    .custom-video-text .video-text-block .video-image {
      width: calc(66.67% - 30px);
    }
	}
	@media (max-width: 767px) {
    .custom-video-text .video-text-block {
      {%- if settings.enable_rtl -%}
      margin: -40px -12px 0px 0px;
      {%- else -%}
      margin: -40px 0px 0px -12px;
      {%- endif -%}
    }
    .custom-video-text .video-text-block .custom-video {
      width: calc(33.33% - 12px);
      {%- if settings.enable_rtl -%}
      margin: 40px 12px 0px 0px;
      {%- else -%}
      margin: 40px 0px 0px 12px;
      {%- endif -%}
    }
    .custom-video-text .video-text-block .video-image {
      width: calc(66.67% - 12px);
      {%- if settings.enable_rtl -%}
      margin: 40px 12px 0px 0px;
      {%- else -%}
      margin: 40px 0px 0px 12px;
      {%- endif -%}
    }
	}
  @media (max-width: 479px) {
    .custom-video-text .video-text-block .custom-video,
    .custom-video-text .video-text-block .video-image {
      width: calc(100% - 12px);
    }
	}

	/* video content css */
	.custom-video-text .video-text-block .custom-video .video-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    height: 100%;
  }
	.custom-video-text .video-text-block .custom-video .video-content .video-block {
    margin-bottom: 66px;
    display: flex;
    align-items: center;
  }
  .custom-video-text .video-text-block .custom-video .video-content .video-block a.video-btn span.icon {
    position: relative;
    background-color: #ffffff;
    width: 90px;
    height: 90px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 100%;
  }
  .custom-video-text .video-text-block .custom-video .video-content .video-block a.video-btn span.icon::before {
    -webkit-animation: hovereffect 2s linear infinite;
    -moz-animation: hovereffect 2s linear infinite;
    animation: hovereffect 2s linear infinite;
  }
  .custom-video-text .video-text-block .custom-video .video-content .video-block a.video-btn span.icon::after {
    -webkit-animation: hovereffect 4s linear infinite;
    -moz-animation: hovereffect 4s linear infinite;
    animation: hovereffect 4s linear infinite;
  }
  .custom-video-text .video-text-block .custom-video .video-content .video-block a.video-btn span.icon::before,
  .custom-video-text .video-text-block .custom-video .video-content .video-block a.video-btn span.icon::after {
    background-color: #ffffff;
    content: '';
    position: absolute;
    top: 0;
    {%- if settings.enable_rtl -%}
    right: 0px;
    {%- else -%}
    left: 0px;
    {%- endif -%}
    width: 100%;
    height: 100%;
    border-radius: 100%;
  }
  @keyframes hovereffect {
    0%{
      opacity: 0.5;
    }
    40%{
      opacity: 0.7;
    }
    100%{
      opacity: 0;
      -webkit-transform: scale(1.3);
      -moz-transform: scale(1.3);
      -ms-transform: scale(1.3);
      transform: scale(1.3);
    }
  }
  .custom-video-text .video-text-block .custom-video .video-content .video-block a.video-btn span.icon i {
    color: var(--font-color-primary);
    font-size: 32px;
    z-index: 2;
    line-height: 1;
    display: flex;
  }
  .custom-video-text .video-text-block .custom-video .video-content span.subtitle {
    margin-bottom: 13px;
  }
  .custom-video-text .video-text-block .custom-video .video-content h2 {
    font-size: 50px;
  }
  .custom-video-text .video-text-block .custom-video .video-content a.video-content-btn {
    margin-top: 17px;
  }
  @media (max-width: 1399px) {
    .custom-video-text .video-text-block .custom-video .video-content h2 {
      font-size: 40px;
    } 
  }
  @media (max-width: 1199px) {
    .custom-video-text .video-text-block .custom-video .video-content .video-block {
      margin-bottom: 36px;
    }
    .custom-video-text .video-text-block .custom-video .video-content h2 {
      font-size: 30px;
    } 
  }
  @media (max-width: 767px) {
    .custom-video-text .video-text-block .custom-video .video-content .video-block {
      margin-bottom: 26px;
    }
    .custom-video-text .video-text-block .custom-video .video-content span.subtitle {
      margin-bottom: 10px;
    }
    .custom-video-text .video-text-block .custom-video .video-content h2 {
      font-size: 24px;
    }
    .custom-video-text .video-text-block .custom-video .video-content a.video-content-btn {
      margin-top: 14px;
    } 
  }

  /* image css */
  .custom-video-text .video-text-block .video-image span.image svg {
    width: 100%;
  }

	/* magificant css */
  .mfp-container.mfp-iframe-holder{
    width: auto;
    left: 15px;
    right: 15px;
  }
  .mfp-iframe-holder .mfp-content{
    max-width: 700px;
  }
  .mfp-iframe-holder .mfp-close {
    display: block!important;
    font-size: 20px;
    padding: 0;
    height: auto;
    width: auto;
    position: absolute;
    top: -20px;
    {% if settings.enable_rtl %}
    left: 0;
    right: auto;
    {% else %}
    right: 0;
    {% endif %}
    background-color: transparent!important;
    line-height: 1;        
  }
  .mfp-iframe-scaler iframe{
    border: none;
  }
  @media(max-width: 767px) {
    .mfp-iframe-holder .mfp-content{
      max-width: 100%;
    }
  }
</style>