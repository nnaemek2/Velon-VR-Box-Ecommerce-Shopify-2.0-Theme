<section class="custom-video-text" {% if section.settings.section_bg_image_enable %}style="background-image: url('{% if section.settings.section_bg_image %}{{ section.settings.section_bg_image | image_url }}{% else %}https://dummyimage.com/1920x810/f7f7f7/999999{% endif %}');"{% endif %} data-section-id="{{ section.id }}">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="video-text-block">
          <div class="custom-video">
            <div class="video-content">
              <div class="video-block">
                <a href="{{ section.settings.video_url }}" class="video-btn play-button popup-youtube">
                  <span class="icon"><i class="ri-play-fill"></i></span>
                </a>
              </div>
              {% if section.settings.video_subtitle != '' %}
              <span class="subtitle" style="color: {{ section.settings.video_subtitle_color }};">{{ section.settings.video_subtitle }}</span>
              {% endif %}
              {% if section.settings.video_title != '' %}
              <h2 style="color: {{ section.settings.video_title_color }};">{{ section.settings.video_title }}</h2>
              {% endif %}
              {% if section.settings.video_btn_text != '' %}
              <a href="{{ section.settings.video_btn_url }}" class="video-content-btn btn {% if section.settings.video_btn_style == 'btn-style1' %}btn-style{% elsif section.settings.video_btn_style == 'btn-style2' %}btn-style2{% else %}btn-style3{% endif %}">{{ section.settings.video_btn_text }}</a>
              {% endif %}
            </div>
          </div>
					<div class="video-image">
            <span class="image">
              {%- if section.settings.video_image -%}
              {{ section.settings.video_image | image_url: width: 1920 | image_tag:
                loading: 'lazy',
                width: section.settings.video_image.width,
                height: section.settings.video_image.height,
                class: "img-fluid",
                alt: section.settings.video_image.alt | escape }}
              {%- else -%}
              {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
              {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </span>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

