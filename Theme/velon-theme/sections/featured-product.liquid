<section class="product-tab-ptb product-area-{{ section.id }}">
  <div class="product-tab-area">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="section-capture">
            <div class="section-title">
              {% if section.settings.section_title != '' %}
              <h2>{{ section.settings.section_title }}</h2>
              {% endif %}
              <div class="product-tab">
                <ul class="nav nav-tabs" role="tablist">
                  {% for block in section.blocks %}
                  {% case block.type %}
                  {% when 'product_tab' %}
                  {% assign category_product = collections[block.settings.tab_product] %}
                  <li role="presentation">
                    <a class="{% if forloop.first == true %}active show{% endif %}" role="tab" data-bs-toggle="tab" href="#tab-{{ block.id }}">
                      <span>{{ category_product.title }}</span>
                    </a>
                  </li>
                  {% endcase %}
                  {% endfor %}
                </ul>
              </div>
            </div>
            <div class="swiper-buttons">
              <button class="swiper-prev swiper-prev-tabpro"><i class="feather-arrow-left"></i></button>
              <button class="swiper-next swiper-next-tabpro"><i class="feather-arrow-right"></i></button>
            </div>
          </div>
          <div class="tab-content tabs">
            {% for block in section.blocks %}
            {% case block.type %}
            {% when 'product_tab' %}
            <div class="tab-pane fade{% if forloop.first == true %} active show{% endif %}" id="tab-{{ block.id }}" role="tabpanel">
              <div class="feture-tab-wrap">
                <div class="swiper feture_pro_tab" id="feature-{{ block.id }}">
                  <div class="swiper-wrapper">
                    {% assign feature_product_limit = section.settings.featured_product_limit_handle %}
                    {% for product in collections[block.settings.tab_product].products limit: feature_product_limit %}
                    <div class="swiper-slide">
                      {%- liquid
                        render 'product-grid-item', product: product
                       -%}
                    </div>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
            <script type="text/javascript">
              addEventListener('DOMContentLoaded', (event) => {
                var swiper = new Swiper('.swiper#feature-{{ block.id }}', {
                  slidesPerView: {{ section.settings.slide_product_limit }},
                  grid: {
                    rows: {{ section.settings.product_col }},
                    fill: 'row' | 'column',
                  },
                  loops: true,
                  spaceBetween: 30,
                  observer: true,
                  observeParents: true,
                  watchSlidesProgress: true,
                  {%- if settings.enable_rtl -%}
                  rtl: true,
                  {%- endif -%}
                  navigation: {
                    nextEl: '.swiper-next-tabpro',
                    prevEl: '.swiper-prev-tabpro',
                  },
                  pagination: {
                    el: ".swiper-pagination-{{ section.id }}",
                    clickable: true
                  },
                  {% comment %} autoplay: {
                    delay: 5000,
                    disableOnInteraction: false,
                    pauseOnMouseEnter: true
                  }, 
                  {% endcomment %}
                  breakpoints: {
                    0: {
                      slidesPerView: 1,
                      grid: {
                        rows: {{ section.settings.product_col }},
                        fill: 'row' | 'column',
                      },
                      spaceBetween: 12
                    },
                    320: {
                      slidesPerView: 1,
                      grid: {
                        rows: {{ section.settings.product_col }},
                        fill: 'row' | 'column',
                      },
                      spaceBetween: 12
                    },
                    360: {
                      slidesPerView: 2,
                      grid: {
                        rows: {{ section.settings.product_col }},
                        fill: 'row' | 'column',
                      },
                      spaceBetween: 12
                    },
                    540: {
                      slidesPerView: 2,
                      grid: {
                        rows: {{ section.settings.product_col }},
                        fill: 'row' | 'column',
                      },
                      spaceBetween: 12
                    },
                    640: {
                      slidesPerView: 2,
                      grid: {
                        rows: {{ section.settings.product_col }},
                        fill: 'row' | 'column',
                      },
                      spaceBetween: 12
                    },
                    768: {
                      slidesPerView: 2,
                      grid: {
                        rows: {{ section.settings.product_col }},
                        fill: 'row' | 'column',
                      },
                      spaceBetween: 30
                    },
                    1024: {
                      slidesPerView: 3,
                      grid: {
                        rows: {{ section.settings.product_col }},
                        fill: 'row' | 'column',
                      },
                      spaceBetween: 30
                    },
                    1199: {
                      slidesPerView: {{ section.settings.slide_product_limit }},
                      grid: {
                        rows: {{ section.settings.product_col }},
                        fill: 'row' | 'column',
                      },
                      spaceBetween: 30
                    }
                  }
                });
              });
            </script>
            {% endcase %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
