<link rel="stylesheet" href="{{ 'footer-css.css' | asset_url }}" media="print" onload="this.media='all'">
<section class="footer-area" {% if section.settings.footer_bg_img_enable %}style="background-image: url('{% if section.settings.footer_bg_img %}{{ section.settings.footer_bg_img | image_url: 'master' }}{% else %}https://dummyimage.com/1920x450/f7f7f7/999999{% endif %}');"{% endif %} data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="footer-list-wrap">
          <ul class="footer-list">
            {% for block in section.blocks %}
            {%- liquid assign row_width = row_width | plus: block.settings.container_width -%}
            {%- case block.type -%}

            {%- when 'store_info' -%}
            <li class="ftlink-li store-info width-{{ block.id }}">
              {%- if block.settings.show_nav_title -%}
              <h4 class="ft-title md-d-none">{{ block.settings.store_info_title }}</h4>
              <a data-bs-toggle="collapse" href="#collapse-{{ block.settings.store_info_title | handleize }}" class="ft-title"><span>{{ block.settings.store_info_title }}</span><i class="ri-add-fill"></i></a>
              {%- endif -%}
              <ul class="{% if block.settings.show_nav_title %}collapse {% endif %} footer-sublist link" id="{%- if block.settings.show_nav_title -%}collapse-{{ block.settings.store_info_title | handleize }}{%- endif -%}">
                <li class="ftsublink-li">
                  <div class="text">
                    {% if block.settings.footer_info_text_1_label != '' %}
                    <span class="label">{{ block.settings.footer_info_text_1_label }}</span>
                    {% endif %}
                    {{ block.settings.footer_info_text_1 }}
                  </div>
                </li>
                <li class="ftsublink-li">
                  <div class="text">
                    {% if block.settings.footer_info_text_2_label != '' %}
                    <span class="label">{{ block.settings.footer_info_text_2_label }}</span>
                    {% endif %}
                    {{ block.settings.footer_info_text_2 }}
                  </div>
                </li>
                <li class="ftsublink-li">
                  <div class="text">
                    {% if block.settings.footer_info_text_3_label != '' %}
                    <span class="label">{{ block.settings.footer_info_text_3_label }}</span>
                    {% endif %}
                    {{ block.settings.footer_info_text_3 }}
                  </div>
                </li>
              </ul>
              {%- style -%}
              .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                width: calc({{ block.settings.container_width }}% - 30px);
              }
              @media (max-width: 1199px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                  width: calc(50% - 30px);
                  order: -1;
                }
              }
              @media (max-width: 767px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                  width: calc(50% - 12px);
                }
              }
              @media (max-width: 479px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                  width: calc(100% - 12px); 
                  order: unset;
                }
              }
              {%- endstyle -%}
            </li>

            {%- when 'footer_menu' -%}
            <li class="ftlink-li link-list width-{{ block.id }}">
              {% assign footer_menu = block.settings.footer_menu_handle %}
              {%- if block.settings.show_nav_title -%}
              <h4 class="ft-title md-d-none">{{ linklists[footer_menu].title }}</h4>
              <a data-bs-toggle="collapse" href="#collapse-{{ linklists[footer_menu].title | handleize }}" class="ft-title"><span>{{ linklists[footer_menu].title }}</span><i class="ri-add-fill"></i></a>
              {%- endif -%}
              <ul class="{% if block.settings.show_nav_title %}collapse {% endif %} footer-sublist link" id="{%- if block.settings.show_nav_title -%}collapse-{{ linklists[footer_menu].title | handleize }}{%- endif -%}">
                {% assign footer_menu = block.settings.footer_menu_handle %}
                {% for link in linklists[footer_menu].links %}
                {% if linklists[footer_menu].links != '' %}
                <li class="ftsublink-li">
                  <a href="{{ link.url }}" class="ft-sublink">{{ link.title }}</a>
                </li>
                {% endif %}
                {% endfor %}
              </ul>
              {%- style -%}
              .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                width: calc({{ block.settings.container_width }}% - 30px);
              }
              @media (max-width: 1199px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                  width: calc(33.33% - 30px);
                }
              }
              @media (max-width: 767px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                  width: calc(33.33% - 12px);
                }
              }
              @media (max-width: 479px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                  width: calc(100% - 12px); 
                }
              }
              {%- endstyle -%}
            </li>

            {%- when 'footer_newsletter' -%}
            <li class="ftlink-li f-newsletter width-{{ block.id }}">
              <div class="f-news-main">
                <div class="news-title">
                  {% if block.settings.news_title != '' %}
                  <h4 class="title">{{ block.settings.news_title }}</h4>
                  {% endif %}
                  {% if block.settings.news_desc != '' %}
                  <p class="desc">{{ block.settings.news_desc }}</p>
                  {% endif %}
                </div>
                {% render 'newsletter' %}
              </div>
              {%- style -%}
              .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                width: calc({{ block.settings.container_width }}% - 30px);
              }
              @media (max-width: 1199px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                  width: calc(50% - 30px);
                  order: -1;
                }
              }
              @media (max-width: 767px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                  width: calc(50% - 12px); 
                }
              }
              @media (max-width: 479px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                  width: calc(100% - 12px); 
                  order: unset;
                }
              }
              {%- endstyle -%}
            </li>

            {%- endcase -%}
            {%- endfor -%}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
